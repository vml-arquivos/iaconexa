# ========================================
# SISTEMA CONEXA v1.0 - PRODUCTION
# ========================================
# PORTAS SEGURAS (sem conflito com outros sistemas)
# - Frontend: 9173
# - Backend: 9001
# - Database: 9432
# ========================================

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
POSTGRES_USER=conexa_prod
POSTGRES_PASSWORD=Conexa@Prod2024!SecurePassword123
POSTGRES_DB=conexa_prod
DATABASE_URL=postgresql://conexa_prod:Conexa@Prod2024!SecurePassword123@db:5432/conexa_prod?schema=public

# ==========================================
# NODE CONFIGURATION
# ==========================================
NODE_ENV=production
PORT=9001

# ==========================================
# SECURITY
# ==========================================
JWT_SECRET=your_jwt_secret_key_change_me_in_production_$(openssl rand -base64 32)
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_key_change_me_in_production_$(openssl rand -base64 32)
BCRYPT_ROUNDS=10

# ==========================================
# URLs
# ==========================================
API_URL=http://localhost:9001
FRONTEND_URL=http://localhost:9173
CORS_ORIGIN=http://localhost:9173

# ==========================================
# OPENAI CONFIGURATION
# ==========================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# ==========================================
# SMTP CONFIGURATION (Email)
# ==========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@conexa.com.br

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_AI_MENTOR=true
ENABLE_STOCK_PREDICTION=true
ENABLE_PDF_GENERATION=true
ENABLE_CRON_JOBS=true
PRISMA_SEED_ENABLED=true

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_FILE=./logs/conexa.log

# ==========================================
# FILE UPLOAD
# ==========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# VITE FRONTEND
# ==========================================
VITE_API_URL=http://localhost:9001
VITE_APP_NAME=Conexa
