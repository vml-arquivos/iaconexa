# ========================================
# SISTEMA CONEXA v1.0
# Vari√°veis de Ambiente - Exemplo
# ========================================

# ========================================
# DATABASE (PostgreSQL)
# ========================================
POSTGRES_USER=conexa_admin
POSTGRES_PASSWORD=conexa_dev_password
POSTGRES_DB=conexa_dev

# Database URL (Usado pelo Prisma)
DATABASE_URL=postgresql://conexa_admin:conexa_dev_password@db:5432/conexa_dev?schema=public

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# Gerar com: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# Session Secret
SESSION_SECRET=your_session_secret_key_here_min_32_chars

# Bcrypt Rounds (10-12 recomendado)
BCRYPT_ROUNDS=10

# ========================================
# API CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ========================================
# OPENAI (IA Mentora)
# ========================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4

# ========================================
# EMAIL (SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@conexa.cocris.org

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_AI_MENTOR=true
ENABLE_STOCK_PREDICTION=true
ENABLE_PDF_GENERATION=true
ENABLE_CRON_JOBS=true

# Seed Database
PRISMA_SEED_ENABLED=true

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=debug
LOG_FILE=./logs/conexa.log

# ========================================
# UPLOADS
# ========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ========================================
# FRONTEND
# ========================================
VITE_API_URL=http://localhost:3001
VITE_APP_NAME=Conexa

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
