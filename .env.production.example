# ========================================
# SISTEMA CONEXA v1.0
# Variáveis de Ambiente (Produção)
# ========================================

# ========================================
# DATABASE (PostgreSQL Local)
# ========================================
POSTGRES_USER=conexa_admin
POSTGRES_PASSWORD=conexa_secure_password_2026_CHANGE_ME
POSTGRES_DB=conexa_prod

# Database URL (Usado pelo Prisma)
DATABASE_URL=postgresql://conexa_admin:conexa_secure_password_2026_CHANGE_ME@db:5432/conexa_prod?schema=public

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# Gerar com: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_32_CHARACTERS_MINIMUM_SECRET_KEY_HERE
JWT_EXPIRES_IN=7d

# Session Secret
SESSION_SECRET=CHANGE_ME_ANOTHER_32_CHARACTERS_SECRET

# Bcrypt Rounds (10-12 recomendado)
BCRYPT_ROUNDS=10

# ========================================
# API CONFIGURATION
# ========================================
NODE_ENV=production
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:80
CORS_ORIGIN=http://localhost:80

# ========================================
# OPENAI (IA Mentora)
# ========================================
OPENAI_API_KEY=sk-CHANGE_ME_YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4

# ========================================
# EMAIL (SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@conexa.cocris.org

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_AI_MENTOR=true
ENABLE_STOCK_PREDICTION=true
ENABLE_PDF_GENERATION=true
ENABLE_CRON_JOBS=true

# Seed Database (true = executar seed na inicialização se banco vazio)
PRISMA_SEED_ENABLED=true

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/conexa.log

# ========================================
# UPLOADS
# ========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ========================================
# FRONTEND
# ========================================
FRONTEND_BUILD_DIR=/app/dist

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
